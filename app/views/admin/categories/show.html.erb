  <% @page_heading = _('Articles in %s', @category.name) %>

  <% content_for('tasks') do %>
    <%= task_edit _('Edit this category'), @category.id %>
  <% end %>

  <%= form_tag :action=>"new" do %>
  <div class="list">
    <table cellspacing="1" cellpadding="0">
    <% for article in @category.articles %>
    <tr  <%= alternate_class %>>
      <td><%= image_tag 'checked.png' %> <%= link_to h(article.title), :controller => "admin/content", :action => "show", :id => article.id %></td>
      <td><%= distance_of_time_in_words_to_now article.published_at %> ago</td>
      <td><%= link_to pluralize(article.comments.size, 'comment'), :controller => 'admin/comments', :article_id => article, :action => 'index' %></td>
    </tr>
    <% end %>
    </table>
  </div>
  <% end %>
